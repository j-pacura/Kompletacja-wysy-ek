{
  "name": "warehouse-packing-app",
  "version": "1.0.0",
  "description": "Desktop application for warehouse packing operations",
  "main": "dist/main/index.js",
  "author": "Warehouse Team",
  "license": "MIT",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "build:main": "tsc --project tsconfig.main.json",
    "electron:dev": "npm run build:main && cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build:main && electron-builder --win portable",
    "start": "npm run build && npm run build:main && electron ."
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "electron": "^33.0.0",
    "sql.js": "^1.10.3",
    "serialport": "^12.0.0",
    "@serialport/parser-readline": "^12.0.0",
    "exceljs": "^4.4.0",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.0",
    "sharp": "^0.33.0",
    "react-router-dom": "^6.20.0",
    "zustand": "^4.4.7",
    "lucide-react": "^0.294.0",
    "date-fns": "^3.0.0",
    "react-confetti": "^6.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.11.0",
    "@types/sql.js": "^1.4.9",
    "typescript": "^5.3.0",
    "electron-builder": "^24.9.0",
    "cross-env": "^7.0.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "ts-loader": "^9.5.0",
    "html-webpack-plugin": "^5.6.0",
    "css-loader": "^6.8.0",
    "style-loader": "^3.3.0",
    "postcss": "^8.4.0",
    "postcss-loader": "^7.3.0",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.0"
  },
  "build": {
    "appId": "com.warehouse.packing",
    "productName": "PakowanieApp",
    "directories": {
      "output": "dist-electron",
      "buildResources": "resources"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    },
    "files": [
      "dist/**/*",
      "database/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "database/schema.sql",
        "to": "schema.sql"
      }
    ]
  }
}
